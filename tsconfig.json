{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2016",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": ["./src"],
	"exclude": ["./node_modules/"]
}